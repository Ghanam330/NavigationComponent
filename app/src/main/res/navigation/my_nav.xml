<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/firstFragment">

    <fragment
        android:id="@+id/firstFragment"
        android:name="com.example.navigationcomponent.navgation_drawer.FirstFragment"
        android:label="fragment_first"
        tools:layout="@layout/fragment_first" >
        <action
            android:id="@+id/action_firstFragment_to_secoundFragment"
            app:destination="@id/secoundFragment" />
    </fragment>
    <fragment
        android:id="@+id/secoundFragment"
        android:name="com.example.navigationcomponent.navgation_drawer.SecoundFragment"
        android:label="fragment_secound"
        tools:layout="@layout/fragment_secound" >
        <action
            android:id="@+id/action_secoundFragment_to_firstFragment"
            app:destination="@id/firstFragment" />
        <argument
            android:name="number"
            app:argType="integer"
            android:defaultValue="2" />
    </fragment>
</navigation>